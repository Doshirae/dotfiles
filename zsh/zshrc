test_ex(){
	case $1 in
		ruby)
			ruby -r minitest/pride *_test.rb
			;;
		elixir)
			elixir *_test.exs
			;;
		*)
			echo "Y'a pas ce langage"
			;;
	esac
}

add-feed(){
	channel_id=$(echo $1 | ruby -aF/ -ne 'puts $F.last' )
	liferea-add-feed "https://www.youtube.com/feeds/videos.xml?channel_id=$channel_id"
}
mcd() { mkdir $1 && cd $1 }
